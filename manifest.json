{

    "manifest_version": 2,
    "name": "Mendhak's Flickr",
    "version": "1.0",
  
    "description": "Photos from Mendhak's Flickr stream whenever a new Tab is displayed",
  
    "icons": {
      "48": "icons/favicon.png"
    },

    "chrome_url_overrides": {
        "newtab":"flickrtab.html"
    },

    "background": {
        "scripts": [
            "js/jquery-1.8.2.min.js",
            "js/supersized.flickr.1.1.2.js"
        ],
        "persistent": true
    },
    "permissions": ["storage"]
     
  
  }